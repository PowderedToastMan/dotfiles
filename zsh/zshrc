ZSH=$HOME/.dotfiles/zsh/oh-my-zsh

# Older zsh needs different prompt
if (zsh --version | grep -q 4.2); then
  ZSH_THEME="gentoo"
else
  ZSH_THEME="agnoster"
fi

# Get grep version
grep_version=$(grep --version | head -n1 | awk '{print $4}')

DISABLE_AUTO_UPDATE="true"
COMPLETION_WAITING_DOTS="true"
HIST_STAMPS="yyyy/mm/dd"
CASE_SENSITIVE="true"
plugins=(git tmux vi-mode)
source $ZSH/oh-my-zsh.sh

# User configuration

# Old versions of grep don't accept --exclude-dir so unset GREP_OPTIONS
[[ "$grep_version" == "$(echo -e "$grep_version\n2.5.1"|sort -V|head -n1)" ]] &&
  unset GREP_OPTIONS

HISTFILE=~/.histfile
HISTSIZE=50000
SAVEHIST=50000

export EDITOR="vim"
export MAIL=$HOME/Mail/inbox

source ~/.dotfiles/zsh/paths
source ~/.dotfiles/zsh/aliases
source ~/.dotfiles/zsh/quirks
source ~/.dotfiles/zsh/mancolors
source ~/.dotfiles/zsh/dircolors
source ~/.dotfiles/zsh/bindings

if [ -f ~/.localrc ]; then
  . ~/.localrc
fi
